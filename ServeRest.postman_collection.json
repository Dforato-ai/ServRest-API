				{
					"name": "novo cadastro",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"pm.globals.unset(\"schema\"); \r",
									"\r",
									"pm.globals.set(\"schema\", {\r",
									"  \"$schema\": \"http://json-schema.org/draft-04/schema#\",\r",
									"  \"type\": \"object\",\r",
									"  \"properties\": {\r",
									"    \"message\": {\r",
									"      \"type\": \"string\"\r",
									"    },\r",
									"    \"_id\": {\r",
									"      \"type\": \"string\"\r",
									"    }\r",
									"  },\r",
									"  \"required\": [\r",
									"    \"message\",\r",
									"    \"_id\"\r",
									"  ]\r",
									"}); "
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"// ---------- Validar Status Code ----------\r",
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(201);\r",
									"});\r",
									"\r",
									"// ---------- Validar objetos da Array  ----------\r",
									"pm.test(\"Validar Response is an object\", function () {\r",
									"    pm.expect(pm.response.json()).to.be.an('object');\r",
									"});\r",
									"\r",
									"// ---------- validar a Mensagem ----------\r",
									"pm.test(\"Validar a mensagem\", function () {\r",
									"    pm.expect(pm.response.json().message).to.eql(\"Cadastro realizado com sucesso\");\r",
									"});\r",
									"\r",
									"// ---------- capturar o ID ----------\r",
									"\r",
									"pm.test(\"Captura de id\", function () {\r",
									"    const jsonData = pm.response.json();\r",
									"   // console.log(jsonData);\r",
									"   // console.log(jsonData._id);\r",
									"\r",
									"    pm.globals.unset(\"userId\");\r",
									"    pm.globals.set(\"userId\", jsonData._id);\r",
									"    \r",
									"});\r",
									"\r",
									"// ---------Validação de contrato ----------\r",
									"pm.test('Schema is valido', function () {\r",
									"    pm.expect(tv4.validate(pm.response.json(), pm.globals.get(\"schema\"))).to.be.true;\r",
									"});\r",
									"\r",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n    \"nome\": \"{{userName}}\",\r\n    \"email\": \"{{userEmail}}\",\r\n    \"password\": \"{{userPassword}}\",\r\n    \"administrador\": \"false\"\r\n}",
