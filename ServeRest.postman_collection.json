				{
					"name": "Busca de novas pessoas",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"// captura nome email e senha\r",
									"\r",
									"pm.globals.set(\"userName\", pm.response.json().results[0].name.first);\r",
									"pm.globals.set(\"userEmail\", pm.response.json().results[0].email);\r",
									"pm.globals.set(\"userPassword\", pm.response.json().results[0].login.password);   \r",
									"console.log(\"userName: \" + pm.globals.get(\"userName\"));\r",
									"console.log(\"userEmail: \" + pm.globals.get(\"userEmail\"));\r",
									"console.log(\"userPassword: \" + pm.globals.get(\"userPassword\"));\r",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "https://randomuser.me/api",
							"protocol": "https",
							"host": [
								"randomuser",
								"me"
							],
							"path": [
								"api"
							]
						}
					},
					"response": []
				}
